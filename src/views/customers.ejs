<% include partials/_header %>

<div class="container mt-5">
  <div class="row">
    <div class="col-md-7">
      <table class="table table-bordered table-hover">
        <thead>
          <tr>
            
            <td>id</td>
            <td>direccion</td>
            <td>capacidad</td>
            <td>Lugar/Referncia</td>
            <td>Actions</td>
          </tr>
        </thead>
        <tbody>
          <% if (data) { %>
            <% for(var i = 0; i < data.length; i++) { %>
              <tr>
                
                <td><%= data[i].id_est %></td>
                <td><%= data[i].direccion %></td>
                <td><%= data[i].capacidad %></td>
                <td><%= data[i].lugar %></td>
                <td>
                  <a href="/update/<%= data[i].id_est %>" class="btn btn-info">Edit</a>
                  <a href="/delete/<%= data[i].id_est %>" class="btn btn-danger">Delete</a>
                </td>
              </tr>
            <% } %>
          <% } %>
        </tbody>
      </table>
    </div>
    <div class="col-md-5">
      <div class="card-body">

        <form action="/add" method="POST">
          <div class="form-group">
            <input type="text" name="id_est" placeholder="id_est" class="form-control" autofocus>
          </div>
          <div class="form-group">
            <input type="text" name="direccion" placeholder="direccion" class="form-control">
          </div>
          <div class="form-group">
            <input type="text" name="capacidad" placeholder="capacidad" class="form-control">
          </div>
          <div class="form-group">
            <input type="text" name="lugar" placeholder="lugar" class="form-control">
          </div>

          <button type="submit" class="btn btn-primary">
            Guardar Registro   
          </button>
          <a href="/buscar/1" class="btn btn-info"> buscar por ID </a>
        </form>

      </div>
    </div>
  </div>
</div>

<% include partials/_footer %>
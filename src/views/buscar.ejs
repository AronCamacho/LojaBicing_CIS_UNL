<% include partials/_header %>

<div class="container mt-5">
  <div class="row">
    <div class="col-md-7">
      <table class="table table-bordered table-hover">
        <thead>
          <tr>
           <td>id</td>
            <td>direccion</td>
            <td>capacidad</td>
            <td>Lugar/Referencia</td>
            <td>Actions</td>    
            </tr>
        </thead>
        <tbody>
          <% if (data) { %>
            <% for(var i = 0; i < data.length; i++) { %>
              <td><%= data[i].id_est %></td>
                <td><%= data[i].direccion %></td>
                <td><%= data[i].capacidad %></td>
                <td><%= data[i].lugar %></td>
                <td>
                  <a href="/update/<%= data[i].id_est %>" class="btn btn-info">Edit</a>
                  <a href="/delete/<%= data[i].id_est %>" class="btn btn-danger">Delete</a>
                </td>
              </tr>
            <% } %>
          <% } %>
        </tbody>
      </table>
    </div>
    

<% include partials/_footer %>
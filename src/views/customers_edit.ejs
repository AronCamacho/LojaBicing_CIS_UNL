<% include partials/_header %>

<div class="container mt-5">
  <div class="row">
    <div class="col-md-5 offset-md-3 card">
      <div class="card-body">
        <form action="/update/<%= data.id_est %>" method="POST">
          <div class="form-group">
           <input type="text" name="id_est" placeholder="id" class="form-control" autofocus>
          </div>
          <div class="form-group">
            <input type="text" name="direccion" placeholder="direccion" class="form-control">
          </div>
          <div class="form-group">
            <input type="text" name="capacidad" placeholder="capacidad" class="form-control">
          </div>
          <div class="form-group">
            <input type="text" name="lugar" placeholder="lugar" class="form-control">
          </div>

          <button type="submit" class="btn btn-primary">
            Guardar Registro
          </button>
        </form>
      </div>
    </div>
  </div>
</div>

